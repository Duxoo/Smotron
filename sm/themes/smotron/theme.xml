    <files>
        <file path="index.html">
        </file>
        <file path="smotron.css">
        </file>
		<file path="head.html">
            <description locale="en_US">App HEAD section</description>
            <description locale="ru_RU">Секция HEAD приложения</description>
        </file>
        <file path="home.html">
            <description locale="en_US">Storefront homepage</description>
            <description locale="ru_RU">Главная витрина магазина</description>
        </file>
    </files>
    <settings>
		<setting var="header_sitename" control_type="text">
			<value>Интернет-система создания и трансляции видеопотоков “Смотрон”</value>
