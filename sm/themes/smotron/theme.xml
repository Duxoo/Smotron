			<name locale="ru_RU">Название сайта в верхнем меню</name>			  
		</setting>
		
		<setting var="youtube" control_type="text">
			<value>https://www.youtube.com/</value>
			<name locale="en_US">YouTube Channel Link</name>
			<name locale="ru_RU">Ссылка на youtube канал</name>			  
		</setting>
		<setting var="vk" control_type="text">
			<value>https://www.vk.com/</value>
			<name locale="en_US">vk Link</name>
			<name locale="ru_RU">Ссылка на vk</name>			  
		</setting>
		<setting var="inst" control_type="text">
			<value>http://instagram.com</value>
			<name locale="en_US">instagram Link</name>
			<name locale="ru_RU">Ссылка на instagram</name>			  
		</setting>
		<setting var="logo" control_type="image">
			<value>img/logo.png</value>
			<filename>img/logo.*</filename>
			<name locale="en_US">Logo</name>
			<name locale="ru_RU">Логотип</name>
		</setting>
	</settings>
